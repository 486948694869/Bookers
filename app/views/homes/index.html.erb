<h1>Homes#index</h1>
<p>Find me in app/views/homes/index.html.erb</p>

<h1> Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td>
                    <%= link_to book.title, book_path(book.id) %>
                </td>
                <td>
                    <%= book.body %>
                </td>
                <td>show</td>
                <td>edit</td>
                <td>destroy</td>
            </tr>
            
        <% end %>
    </tbody>
</table>

<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<h1> Books</h1>

<table>
    <thread>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thread>
    <tbody>
        <% @books.each do |book| %>
    </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |book| %>
<h2>Title</h2>
<%= book.text_field :title %>
<h2>Body</h2>
<%= book.text_area :body %>
<%= book.submit 'create book' %>
<% end %>
